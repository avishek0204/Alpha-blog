<h1> Create new article </h1>
<%
    errors = @article.errors.full_messages;
%>

<ul class="error_messages">
    <% errors.each do |error| %>
        <li><%= error %></li>
    <% end %>
<ul>


<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>


